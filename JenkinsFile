pipeline {
    agent any
    stages {
        stage('Build test code') {
            steps {
                bat 'mvn clean install -DskipTests'
            }
        }
        stage('Execute test') {
            steps {
                bat 'mvn test'
            }
        }
        stage('Generate serenity report') {
            steps {
                script {
                serenity([
                        includeProperties: false,
                        jdk              : '',
                        properties       : [],
                        reportBuildPolicy: 'ALWAYS',
                        results          : [[path: 'target/sit/serenity/index.html']]
                    ])
                }
            }
        }
    }
}
